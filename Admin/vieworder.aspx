<asp:Content ID="Content1" ContentPlaceHolderID="head" Runat="Server">
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" Runat="Server">
    <div class="banner">
        <h2>
            <asp:SqlDataSource ID="SqlDataSource1" runat="server"></asp:SqlDataSource>
            <a href="Users.aspx">Home</a> <i class="fa fa-angle-right"></i><span>view order</span>
        </h2>
        </div>
        <br />
        
        <asp:GridView ID="grd1" runat="server" DataKeyNames="crt_id" DataSourceID="gr1" AutoGenerateDeleteButton="true"
