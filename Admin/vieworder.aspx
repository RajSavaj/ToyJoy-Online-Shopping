            <Columns>
                <asp:BoundField DataField="crt_id" HeaderText="cart id" />
                <asp:BoundField DataField="i_id" HeaderText="i id" />
                <asp:BoundField DataField="u_id" HeaderText=" u id " />
                <asp:BoundField DataField="quantity" HeaderText="qty" />
                <asp:BoundField DataField="status" HeaderText="status" />
            </Columns>
        </asp:GridView>
    </div>
 
    

<asp:SqlDataSource ID="gr1" runat="server" ConnectionString="<%$ ConnectionStrings:conn %>" 
        ProviderName="System.Data.SqlClient" SelectCommand="select * from [cart]" 
        DeleteCommand="delete from [cart] where crt_id=@crt_id" onselecting="s1_Selecting"> 
 </asp:SqlDataSource>

